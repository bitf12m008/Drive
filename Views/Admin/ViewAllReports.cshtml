@model IEnumerable<DriveSafe_Server.Report>
@{
    ViewBag.Title = "ViewTripReports";
    Layout = null;
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Custom.css" rel="stylesheet" />
    <title>Profile</title>
    
</head>
<body>
    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">

            <!--header section -->

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/Admin/DoLoginAdmin" style="font-family:'Global User Interface'">Home</a>
            </div>
            <!-- menu section -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="~/Admin/Logout" style="font-size: 20px">Logout</a></li>
                    <li><a href="#" style="font-size: 20px">Feedback</a></li>

                    <li><a href="~/Admin/ViewAllReports" style="font-size: 20px">View TripReports</a></li>
                    
                    
                </ul>
            </div>
        </div>
    </nav>
    <br />
    <br /><br /><br />
    

<div class="row">
    
    <div class="col-md-10">
 <div style="float:left" >
      <table class="table table-striped table-bordered table-hover table-condensed table-responsive ">
    <thead>
      <tr>
          <th>User Name</th>
        <th> Date</th>
                    <th> TripID </th>
                    <th>StartTime</th>
                    <th>EndTime</th>
                    <th>MaximumSpeed</th>
                    <th>Voltage</th>
                    <th>MaxCoolantTemperature</th>
                    <th>OverAccelerationCount</th>
                    <th>HarshBrakeCount</th>
                    <th>FaultCodeOccur</th>
                    <th>EngineIdleTime</th>
                    <th>ViewDetail</th>
            
      </tr>
    </thead>
  <tbody>  
  
                @foreach(var p in Model){
                    <tr style="height:20%;">
                         <td>@p.UserName</td>
                        <td>@p.Date</td>
                        <td>@p.TripID</td>
                        <td>@p.StartTime</td>
                          <td>@p.EndTime</td>
                        <td>@p.MaxSpeed KM/H</td>
                        <td>@p.Voltage V</td>
                          <td>@p.MaxCoolant</td>
                        <td>@p.OverAccelerationCount</td>
                         <td>@p.HarshBrakeCount</td>
                        <td>@p.FaultCode</td>
                        <td>@p.EngineIdle Minutes</td>
                                
            <td><a href="/Admin/ViewTripLog?id=@p.UserName&date=@p.Date&tripID=@p.TripID" class="btn btn-primary btn-small ">ViewLog</a></td>
            </tr>
                }
                
            </tbody>
        </table>
    </div>
        </div>
    </div>



<br /><br /><br />
    
</body>
</html>




