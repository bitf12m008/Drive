@model IEnumerable<DriveSafe_Server.Report>
@{
    ViewBag.Title = "ViewTripReports";
    Layout = null;
}



<!DOCTYPE html>
<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="description" content="Vertex, singple page mobile app theme.">
    <meta name="keywords" content="vertex, theme, app, single page">
    <meta name="author" content="rype pixel">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Drive Safe </title>

    <!-- CSS file links -->

    <link href="/Content/bootstrap.css" rel="stylesheet" />
    <link href="/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="/Content/css/jquery.bxslider.css" rel="stylesheet" />
    <link href="/Content/css/lightbox.css" rel="stylesheet" />
    <link href="/Content/css/responsive.css" rel="stylesheet" />
    <link href="/Content/css/style.css" rel="stylesheet" />


    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/bootstrap-theme.css")
    @Styles.Render("~/Content/bootstrap-theme.min.css")
    @Styles.Render("~/Content/styles.css")
    <script src="~/Content/jquery.js"></script>
    <link href="~/Content/style.css" rel="stylesheet" />



</head>
<body>

    <!-- Header Start -->
    <header class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button style="background-color:#339999" type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>





            <a href="~/Admin/DoLoginAdmin"><img style="width:155px;height:90%;margin-left:-4%" class="img-responsive pull-left" src="~/Content/images/icons/fu.png"></a>

            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="~/Admin/Logout" style="font-size: 20px;color:#339999">Logout</a></li>
                    <li><a href="#" style="font-size: 20px;color:#339999">Feedback</a></li>
                    <li class="current"><a href="~/Home/ViewTripReports" style="font-size: 20px;color:#339999">View TripReports</a></li>


                </ul>



            </div><!--/.navbar-collapse -->

        </div><!-- END Container -->

    </header><!-- END Header -->

    <br />
    <br /><br /><br />


    <div class="row">

        <div class="col-md-10">
            <div style="float:left">
                <table class="table table-striped table-bordered table-hover table-condensed table-responsive ">
                    <thead>
                        <tr>
                            <th> Date</th>
                            <th> TripID </th>
                            <th>StartTime</th>
                            <th>EndTime</th>
                            <th>MaximumSpeed</th>
                            <th>Voltage</th>
                            <th>MaxCoolantTemperature</th>
                            <th>OverAccelerationCount</th>
                            <th>HarshBrakeCount</th>
                            <th>FaultCodeOccur</th>
                            <th>EngineIdleTime</th>
                            <th>ViewDetail</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var p in Model)
                        {
                            <tr style="height:20%;">
                                <td>@p.Date</td>
                                <td>@p.TripID</td>
                                <td>@p.StartTime</td>
                                <td>@p.EndTime</td>
                                <td>@p.MaxSpeed KM/H</td>
                                <td>@p.Voltage V</td>
                                <td>@p.MaxCoolant</td>
                                <td>@p.OverAccelerationCount</td>
                                <td>@p.HarshBrakeCount</td>
                                <td>@p.FaultCode</td>
                                <td>@p.EngineIdle Minutes</td>

                                <td><a href="/Admin/ViewTripLog?id=@p.UserName&date=@p.Date&tripID=@p.TripID" class="btn btn-primary btn-small ">ViewLog</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>



    <br /><br /><br />

</body>
</html>
